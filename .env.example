# Monday
MONDAY_API_TOKEN=
MONDAY_SIGNING_SECRET=
MONDAY_BOARD_ID=
MONDAY_STATUS_FIGMA_READY=
# Optional strict webhook gates (off by default)
# MONDAY_ENFORCE_FILTERS=true
# MONDAY_ALLOWED_STATUS_VALUES=ready for review,brief ready / approved
# MONDAY_ALLOWED_TEAM_VALUES=studio,content creation

# Plugin: filter briefings by status and creative partner (CSV, case-insensitive)
# PLUGIN_FILTER_STATUS=brief ready,approved,ready
# PLUGIN_FILTER_CREATIVE_PARTNER=studio,content creation

# Figma (optional; read-only for V1)
FIGMA_ACCESS_TOKEN=
FIGMA_TEMPLATE_FILE_KEY=

# Figma team IDs for project browser (comma-separated)
# Find your team ID in Figma: https://www.figma.com/files/<org>/team/<TEAM_ID>/...
FIGMA_TEAM_IDS=

# Optional: map canonical month key to Figma file key. Example:
# HEIMDALL_BATCH_FILE_MAP={"2026-03":"abc123xyz"}
# NOTE: In production (Vercel), this is stored in KV and managed via /routing page
HEIMDALL_BATCH_FILE_MAP=

# Dry run (no enqueue, no Monday/Figma writes)
# HEIMDALL_DRY_RUN=true

# Claude mapping agent (optional; omit to use column-only fallback)
ANTHROPIC_API_KEY=
# ANTHROPIC_THINKING_BUDGET=10000

# Babylon localization ingest bridge (Heimdall -> Babylon)
# Signature format:
#   x-localization-timestamp: unix ms
#   x-localization-signature: HMAC_SHA256_HEX(secret, `${timestamp}.${rawBody}`)
LOCALIZATION_BABYLON_INGEST_URL=
LOCALIZATION_BABYLON_SHARED_SECRET=
# LOCALIZATION_BABYLON_KEY_ID=primary

# Vercel KV (auto-set when you link KV store in Vercel)
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Supabase (comment persistence + auth)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Supabase public keys (needed client-side for auth)
# Find these in Supabase dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Admin Panel Authentication (optional; leave empty to disable auth)
ADMIN_PASSWORD=

# Sheets Authentication (optional; leave empty to disable auth on /sheets)
SHEETS_PASSWORD=

PORT=3846
